.player{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	background-color: black;
}
.movie{
	width: 100%;
	height: 440rpx;
}
.movie-info{
	padding: 40rpx 20rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	background-color: #f7f4f9;
}
.movie-cover {
	width: 280rpx;
	height: 380rpx;
}
.movie-desc{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	margin-left: 30rpx;
	width: 400rpx;
}
.title{
	 font-size: 30px;
}
.basic-info{
	 color: darkgray;
	 font-size: 13px;
	 line-height: 30rpx;
	 white-space: nowrap;
	 overflow: hidden;
	 text-overflow: ellipsis;
}
.score-block{
	 background-color: white;
	 margin-top: 20rpx;
	 width: 360rpx;
	 height: 90rpx;
	 display: -webkit-box;
	 display: -webkit-flex;
	 display: flex;
	 -webkit-box-pack: start;
	 -webkit-justify-content: flex-start;
	         justify-content: flex-start;
	 padding: 20rpx;
	 box-shadow: 3px 2px 10px #dedede;
}
.score-words{
	 font-size: 12px;
	 color: gray;
}
.big-stars{
	 margin-left: 30rpx;
}
.movie-score{
	font-size: 28px;
	font-weight: bold;
	margin-left: 8rpx;
	color: #feab2a;
	line-height: 60rpx;
}
.prise-counts{
	 font-size: 12px;
	 color: gray;
	 line-height: 30rpx;
}
.plots-block{
	 background-color: #F7F4F9;
	 padding: 20rpx 40rpx;
}
.plots-title{
	 color: #a9a9a9;
	 font-size: 14px;
}
.plots-desc{
	 margin-top: 10rpx;
	 font-size: 16px;
}
.scroll-block{
	 background-color: #F7F4F9;
	 padding: 20rpx 40rpx;
}
.scroll-list{
	 width: 100%;
	 white-space: nowrap;
	 margin-top: 20rpx;
}
.plot-image{
	 width: 220rpx;
	 height: 320rpx;
	 margin-right: 10rpx;
}
.single-actor{
	 width: 170rpx;
	 height: 240rpx;
	 margin-right: 10rpx;
}
.actor-waper{
	 display: inline-block;
}
.actor-name{
	 width: 170rpx;
	 text-align: center;
	 font-size: 15px;
	 white-space: nowrap;
	 overflow: hidden;
	 text-overflow: ellipsis;
}
.actor-role{
	 width: 170rpx;
	 text-align: center;
	 font-size: 13px;
	 color: #A9A9A9;
}

